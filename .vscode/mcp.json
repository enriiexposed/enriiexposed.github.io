{
	"servers": {
		"Astro docs": {
			"url": "https://mcp.docs.astro.build/mcp",
			"type": "http"
		},
		"GitHub": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-github"
			],
			"env": {
				"GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_PERSONAL_ACCESS_TOKEN}"
			},
			"type": "stdio"
		},
		"GitHub Repositories": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-github-repos"
			],
			"env": {
				"GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_PERSONAL_ACCESS_TOKEN}"
			},
			"type": "stdio"
		}
	},
	"inputs": []
}